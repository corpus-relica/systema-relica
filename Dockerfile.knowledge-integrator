FROM node:latest as build
MAINTAINER Marc <marc@specular-occlusion>

WORKDIR /usr/src/app

# Copy root package files first
COPY package.json .
COPY yarn.lock .

# Copy all the package sources
COPY packages_ts/types ./packages_ts/types
COPY packages_ts/constants ./packages_ts/constants
COPY packages_ts/fact-search-ui ./packages_ts/fact-search-ui
COPY packages_ts/3d-graph-ui ./packages_ts/3d-graph-ui
COPY packages_ts/hsm-manager ./packages_ts/hsm-manager
COPY packages_ts/knowledge-integrator ./packages_ts/knowledge-integrator

# Install dependencies
RUN yarn install --pure-lockfile --non-interactive --network-timeout 100000

# Build packages in order
WORKDIR /usr/src/app/packages_ts/types
RUN yarn build

WORKDIR /usr/src/app/packages_ts/constants
RUN yarn build

WORKDIR /usr/src/app/packages_ts/fact-search-ui
RUN yarn build

WORKDIR /usr/src/app/packages_ts/3d-graph-ui
RUN yarn build

WORKDIR /usr/src/app/packages_ts/hsm-manager
RUN yarn build

WORKDIR /usr/src/app/packages_ts/knowledge-integrator
RUN yarn build

# Second stage
FROM node:latest

WORKDIR /usr/src/app

# Copy root package files
COPY package.json .
COPY yarn.lock .

# Copy built packages
COPY --from=build /usr/src/app/packages_ts/types/package.json ./packages_ts/types/package.json
COPY --from=build /usr/src/app/packages_ts/types/dist ./packages_ts/types/dist

COPY --from=build /usr/src/app/packages_ts/constants/package.json ./packages_ts/constants/package.json
COPY --from=build /usr/src/app/packages_ts/constants/dist ./packages_ts/constants/dist

COPY --from=build /usr/src/app/packages_ts/fact-search-ui/package.json ./packages_ts/fact-search-ui/package.json
COPY --from=build /usr/src/app/packages_ts/fact-search-ui/dist ./packages_ts/fact-search-ui/dist

COPY --from=build /usr/src/app/packages_ts/3d-graph-ui/package.json ./packages_ts/3d-graph-ui/package.json
COPY --from=build /usr/src/app/packages_ts/3d-graph-ui/dist ./packages_ts/3d-graph-ui/dist

COPY --from=build /usr/src/app/packages_ts/hsm-manager/package.json ./packages_ts/hsm-manager/package.json
COPY --from=build /usr/src/app/packages_ts/hsm-manager/dist ./packages_ts/hsm-manager/dist

COPY --from=build /usr/src/app/packages_ts/knowledge-integrator/package.json ./packages_ts/knowledge-integrator/package.json
COPY --from=build /usr/src/app/packages_ts/knowledge-integrator/src ./packages_ts/knowledge-integrator/src

ENV NODE_ENV development

RUN yarn install

WORKDIR /usr/src/app/packages_ts/knowledge-integrator

EXPOSE 5173

CMD ["yarn", "dev"]
