{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@relica/types": ["../types/dist"],
      "@relica/constants": ["../constants/dist/constants.js"],
      "@relica/constants/*": ["../constants/dist/*"],
    },
    "rootDir": "./src",
    "composite": true,
    "outDir": "./dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
  },
  "references": [
    { "path": "../types" },
    { "path": "../constants" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
