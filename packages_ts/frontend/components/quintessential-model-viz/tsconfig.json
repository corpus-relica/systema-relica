{
  "extends": "../../../config/tsconfig.frontend.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "dist",

    "isolatedModules": true,
    "jsx": "react-jsx",
    
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/main.tsx"]
}